generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  // provider = "mysql"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  sexe      String
  account   Account?
  sick      Sick?
  admin     Admin?
}

model Sick {
  tel    String @unique
  userId Int    @id
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Admin {
  userId   Int        @id
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  Articles Articles[]
}

model Articles {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(200)
  description String   @db.Text()
  image       String
  keywords    String[]
  adminId     Int
  admin       Admin    @relation(fields: [adminId], references: [userId], onDelete: Cascade)
}

model Appointment {
  id                Int      @id @default(autoincrement())
  firstName         String
  lastName          String
  tel               String
  time              String
  date              DateTime
  numberTurnPatient Int
}

model OptCode {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  otp       String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
